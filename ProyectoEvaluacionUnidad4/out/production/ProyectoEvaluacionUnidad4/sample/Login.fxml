<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" styleClass="fondo" stylesheets="@estilos.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ControllerLogin">
   <children>
      <Label alignment="CENTER" text="Login">
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="34.0" />
         </font>
      </Label>
      <Label text="Usuario">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="20.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtUsuario">
         <VBox.margin>
            <Insets bottom="10.0" left="100.0" right="100.0" />
         </VBox.margin>
      </TextField>
      <Label text="Password">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets bottom="10.0" />
         </VBox.margin>
      </Label>
      <PasswordField fx:id="txtPassword">
         <VBox.margin>
            <Insets left="100.0" right="100.0" />
         </VBox.margin>
      </PasswordField>
      <Button mnemonicParsing="false" onAction="#btnIngresar" styleClass="buttonIngresar" text="Ingresar ">
         <font>
            <Font size="18.0" />
         </font>
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
